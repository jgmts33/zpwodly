{
    "name": "Clients (Native)",
    "dockerComposeFile": [
        "../../../docker-compose.yml"
    ],
    "service": "native",
    "shutdownAction": "none",
    "extensions": [
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint"
    ],
    "postCreateCommand": "",
    "settings": {
        "editor.formatOnSave": true,
        "editor.formatOnPaste": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "workspaceFolder": "/app",
    // Run as vscode user (which should match host user ID)
    "remoteUser": "node"
}
